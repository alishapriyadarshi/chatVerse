
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to see the list of users
    match /users/{userId} {
      allow list, get: if request.auth != null;
      // Users can only create and update their own user document
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create conversations if they are one of the participants
    match /conversations/{conversationId} {
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      // Allow participants to read the conversation details
      allow get: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // Allow participants to see their own conversations in a list
      allow list: if request.auth != null && request.auth.uid in resource.data.participantIds;

       // Allow participants to write messages and update conversation metadata
      match /messages/{messageId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }
  }
}
