rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /conversations/{conversationId} {
      // A user can read or update a conversation if they are a participant.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // Any authenticated user can create a new conversation.
      allow create: if request.auth != null;
    }
    match /conversations/{conversationId}/messages/{messageId} {
      // A user can read or write messages in a conversation if they are a participant.
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
    }
  }
}
